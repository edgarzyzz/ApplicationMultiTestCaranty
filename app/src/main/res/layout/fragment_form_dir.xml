<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".dir_module.ui.FormDirFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLatFgmntfl"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@id/imgvCoverFgmntfl">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etLatFgmntfl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Directorio"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:text="/mnt/sdcard/eddgames" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAceptFgmntfd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"/>

</LinearLayout>